; {{ ansible_managed }}
; ckan_harvesting.ini

; ===============================
; ckan harvester
; ===============================

[program:ckan_gather_consumer]

command=/usr/lib/ckan/default/bin/ckan --config /etc/ckan/default/ckan.ini  harvester gather-consumer

; user that owns virtual environment.
user=ckan

numprocs=1
stdout_logfile=/etc/ckan/default/gather_consumer.log
stderr_logfile=/etc/ckan/default/gather_consumer.log
autostart=true
autorestart=true
startsecs=10

[program:ckan_fetch_consumer]

command=/usr/lib/ckan/default/bin/ckan --config /etc/ckan/default/ckan.ini  harvester fetch-consumer

; user that owns virtual environment.
user=ckan

numprocs=1
stdout_logfile=/etc/ckan/default/fetch_consumer.log
stderr_logfile=/etc/ckan/default/fetch_consumer.log
autostart=true
autorestart=true
startsecs=10
