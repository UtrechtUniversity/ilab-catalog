# {{ ansible_managed }}
# ckan-uwsgi.ini
[uwsgi]

http            =  127.0.0.1:8080
uid             =  apache
guid            =  apache
wsgi-file       =  /etc/ckan/default/wsgi.py
virtualenv      =  /usr/lib/ckan/default
module          =  wsgi:application
master          =  true
pidfile         =  /tmp/%n.pid
harakiri        =  50
max-requests    =  5000
vacuum          =  true
callable        =  application
